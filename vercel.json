{
"version": 2,
"buildCommand": "npm run build",
"outputDirectory": "dist",
"public": true,
"github": {
    "silent": true
},
"env": {
    "SUPABASE_URL": "@supabase_url",
    "SUPABASE_KEY": "@supabase_key"
},
"headers": [
    {
    "source": "/(.*)",
    "headers": [
        {
        "key": "X-Content-Type-Options",
        "value": "nosniff"
        },
        {
        "key": "X-Frame-Options",
        "value": "DENY"
        },
        {
        "key": "X-XSS-Protection",
        "value": "1; mode=block"
        }
    ]
    }
],
"routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
]
}

